<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Status bar tweaks -->
    
 <PreferenceScreen
          android:fragment="com.sourcery.magiccontrol.activities.StatusBarStyle"
          android:key="status_bar_background_style"
          android:title="@string/status_bar_background_style" />

  <ListPreference
           android:key="status_bar_fontsize"
           android:title="@string/statusbar_fontsize"
           android:summary="@string/statusbar_fontsize_summary"
           android:entries="@array/statusbar_fontsize_entries"
           android:entryValues="@array/statusbar_fontsize_values" />

  <CheckBoxPreference
            android:key="status_bar_auto_hide"
            android:title="@string/auto_hide_statusbar"
            android:summary="@string/auto_hide_statusbar_summary"
            android:defaultValue="false" />

  <CheckBoxPreference
            android:key="halo_enabled"
            android:title="@string/halo_enabled_title"
            android:summary="@string/halo_enabled_summary"
            android:defaultValue="false" />

  <CheckBoxPreference
            android:key="show_popup"
            android:title="@string/popups_title"
            android:summary="@string/popups_summary"
            android:defaultValue="true" />

  <CheckBoxPreference
            android:key="halo_pause"
            android:title="@string/halo_pause_title"
            android:summary="@string/halo_pause_summary" />

  <ListPreference
            android:key="halo_state"
            android:dialogTitle="@string/halo_state_title"
            android:title="@string/halo_state_title"
            android:summary="@string/halo_state_summary"
            android:entries="@array/entries_halo_state"
            android:dependency="halo_enabled"
            android:entryValues="@array/values_halo_state" />

        <CheckBoxPreference
            android:key="halo_hide"
            android:title="@string/halo_hide_title"
            android:summary="@string/halo_hide_summary"
            android:dependency="halo_enabled"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="halo_reversed"
            android:title="@string/halo_reversed_title"
            android:summary="@string/halo_reversed_summary"
            android:dependency="halo_enabled"
            android:defaultValue="true" />

  <ListPreference
        android:key="status_bar_icon_opacity"
        android:dialogTitle="@string/status_bar_icon_opacity"
        android:title="@string/status_bar_icon_opacity"
        android:summary="@string/status_bar_icon_opacity_summary"
        android:entries="@array/status_bar_icon_opacity_entries"
        android:entryValues="@array/status_bar_icon_opacity_values"
        android:defaultValue="140" />
         
    <CheckBoxPreference
         android:key="statusbar_brightness_slider"
         android:title="@string/statusbar_brightness_slider_title"
         android:summary="@string/statusbar_brightness_slider_summary" />

    <CheckBoxPreference
         android:key="status_bar_donotdisturb"
         android:title="@string/status_bar_donotdisturb_title"
         android:summary="@string/status_bar_donotdisturb_summary"
         android:defaultValue="false" />
</PreferenceScreen>

